<%- include('../partials/header') %>
    <section id="show-page">
        <h1>
            <%= workout.date %>
        </h1>
        <br><br>
        <h1>Type: <%= workout.muscleGroups.muscles %>
        </h1>
        <h1>Calories: <%= workout.calories %>
        </h1>
        <div class="exercise-table">
            <table>
                <thead>
                    <tr>
                        <th>Exercise</th>
                        <th>SetNum</th>
                        <th>Weight</th>
                        <th>Reps</th>
                    </tr>
                </thead>
                <tbody>
                    <% workout.exercise.forEach(function(exercise) { %>
                        <tr>
                            <td>
                                <%= exercise.exercise %>
                            </td>
                            <td>
                                <%= exercise.setNum %>
                            </td>
                            <td>
                                <%= exercise.weight %>
                            </td>
                            <td>
                                <%= exercise.reps %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </section>
    <br><br>
    <h2><a href="/workouts/<%= workout._id %>/exercises/new">Add Exercise</a></h2>
    <br><br>
    <h2><a href="/workouts/<%= workout._id %>/edit">Edit Workout</a></h2>
    <%- include('../partials/footer') %>